<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_marginTop="70dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="191dp"
        android:layout_height="142dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/app_icon" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:text="Spendify"
        android:textSize="34dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="Ứng dụng quản lý chi tiêu"
        android:textSize="22dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="312dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="Chào mừng đến với Spendify"
        android:textSize="18dp" />
    <TextView
        android:id="@+id/textView4"
        android:layout_width="312dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:gravity="center"
        android:text="Trải nghiệm niềm vui quản lý tài chính bằng việc đăng ký trong lần đầu sử dụng"
        android:textSize="18dp" />

    <Button
        android:id="@+id/btnSignUp"
        android:layout_width="248dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="79dp"
        android:layout_marginLeft="79dp"
        android:layout_marginTop="56dp"
        android:text="ĐĂNG KÝ TÀI KHOẢN MỚI"
        android:textColor="@color/white"
        android:backgroundTint="@color/lavender"/>
    <Button
        android:id="@+id/btnSignIn"
        android:layout_width="248dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="79dp"
        android:layout_marginLeft="79dp"
        android:layout_marginTop="0dp"
        android:text="ĐĂNG NHẬP"
        android:textColor="@color/lavender"
        android:backgroundTint="@color/white"/>

    <Button
        android:id="@+id/btnLanguage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginStart="79dp"
        android:layout_marginLeft="79dp"
        android:layout_marginTop="60dp"
        android:backgroundTint="@color/white"
        android:text="Tiếng Việt"
        android:textColor="@color/black" />

</LinearLayout>